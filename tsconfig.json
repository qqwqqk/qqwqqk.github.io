{
    "version": "1.0.0",
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": false,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "allowJs": true,
      "lib": ["dom","es2015"]
    },
    "include": ["src/**/*"],
    "exclude": ["dist"] 
  }